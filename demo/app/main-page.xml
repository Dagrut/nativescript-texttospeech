<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded">
  <ScrollView>
  		<StackLayout>
		    <TextView text="{{ textToSpeak }}"/>
		    <Label text="{{ 'Queue: ' + shouldQueue }}"/>
		    <Switch checked="{{ shouldQueue }}"/>
		    <Label text="{{ 'Pitch: ' + pitchValue }}"/>
		    <Slider value="{{ pitchValue }}" minValue="0" maxValue="2.0"/>
		    <Label text="{{ 'Volume: ' + volumeValue }}"/>
		    <Slider value="{{ volumeValue }}" minValue="0.0" maxValue="1.0"/>
		    <Label text="{{ 'Rate: ' + speechRate }}"/>
		    <Slider value="{{ speechRate }}" minValue="0.0" maxValue="2.0"/>
		    <Button text="Speak" tap="{{ speakText }}" />
  		</StackLayout>
	</ScrollView>
</Page>